{
    "git": {
        "requireBranch": [
            "main"
        ],
        "commitMessage": "chore: release @web3nl/vite-plugin-canister-dapp v${version}",
        "tagName": "web3nl/vite-plugin-canister-dapp-v${version}",
        "tagAnnotation": "Release @web3nl/vite-plugin-canister-dapp v${version}"
    },
    "npm": {
        "publish": true,
        "access": "public"
    },
    "github": {
        "release": false
    },
    "hooks": {
        "before:init": [
            "npm run lint",
            "npm run typecheck"
        ],
        "after:bump": [
            "npm run build"
        ],
        "after:release": "echo Successfully released @web3nl/vite-plugin-canister-dapp v${version}"
    }
}